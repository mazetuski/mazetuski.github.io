morado = #6639B6
gris = #d8d8d8
body
  font-size 16px
  font-family 'Roboto', sans-serif
  background-color gris

.centrar
  text-align center

.alinearCentrado
  align-items center

#contenedor
  display flex
  flex-flow row

.contenedorPonentes
  width 80%
  text-align center
  margin 30px auto
  margin-bottom 40px
  header
    background-color white
    img
      width 60%
      margin 0 auto

.contenedorActividades
  width 90%
  margin 20px auto
  box-shadow 0 3px 5px grey
  h3
    padding 5px 20px
  p
    color #696969
    padding 5px 20px
  h3, label
    color morado

#dialog, .dialogAccion
  display none

#formActividad
  flex 0 0 100%
  textarea
    flex 1 0 auto
  input[type=submit]
    flex 0
  input[type=submit], input[type=file]
      margin-top 10px

#formRegistro, #formActividad
  display flex
  flex-flow column
  flex-wrap wrap
  justify-content center
  align-items center
  margin 20px auto
  p
    margin 5px auto
    width 30%
    display flex
    justify-content space-around
    align-items center
    label
      flex 1
      min-width: 90px;
      text-align: center;
      padding-right 10px
    input
      flex 2

.grande
  display none

#hamburguesa
  cursor pointer

header
  display flex
  flex-flow row
  background-color morado
  color white
  h3
    flex 0 0 20%
    padding 20px
  a
    display flex
    align-items center
    padding 20px

main
  box-shadow 0 5px 10px grey
  width 100%
  img
    width 100%
    height 100%

main, nav
  background-color white

nav
  width 40%
  display none
  position absolute
  #loginPonentes
    padding 15px 20px
    p
      display flex
      flex-wrap wrap
      justify-content space-around
      align-items center
      label
        flex 1
  ul
    list-style none
    padding 0
    li
      padding 5px 20px
      a
        text-decoration none
        color black

#ponenteLogContenedor
  width 90%
  margin 20px auto
  display flex
  flex-flow column
  align-items center
  img
    width 70%
    height 70%

.titulo
  width 100%
  text-align center
  h2
    color #000000

@media only screen and (min-width 1000px)
  .contenedorPonentes
    flex 0 0 27%
    header
      img
        width 80%
  .grande
    display block
  .peque
    display none
  main
    flex 0 0 78%
    margin 20px auto
    display flex
    flex-flow row
    flex-wrap wrap
    justify-content space-around
    align-items flex-start
  nav
    display block
    position static
    flex 0 0 20%
  #ponenteLogContenedor
    width 70%
    img
      width 50%
      height 50%

